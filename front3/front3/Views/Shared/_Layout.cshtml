<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/front2.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-100">
    <header class="bg-[#f4e2d5] p-4 flex justify-between items-center">
        <div class="logo">
            <img src="~/Images/hlog.jpg" alt="iKhwezi Foundation Logo" class="h-24">
        </div>
        <button class="donate-button bg-[#254c32] text-white px-4 py-2 rounded-full">Donate</button>
    </header>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">front2</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Donations" asp-action="Donate">Donations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Help" asp-action="Help">How can I Help</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Contact">Contact us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="News">News Blog</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-logo">
                <img src="~/Images/flog.jpg" alt="iKhwezi Foundation Logo">
            </div>
            <div class="footer-links">
                <a href="#">About us</a>
                <a href="#">Donate</a>
                <a href="#">Projects</a>
                <a href="#">News Blog</a>
                <a href="#">Contact us</a>
                <a href="#">How Can I Help</a>
            </div>
            <div class="footer-socials flex">
                <a href="#" class="mr-4">
                    <img src="~/Images/twitter.png" alt="Twitter" class="w-6 h-6">
                </a>
                <a href="#">
                    <img src="~/Images/ig.png" alt="Instagram" class="w-6 h-6">
                </a>
                <a href="#">
                    <img src="~/Images/fb.jpg" alt="Facebook" class="w-6 h-6">
                </a>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2022 Brand, Inc. - <a href="#">Privacy</a> - <a href="#">Terms</a> - <a href="#">Sitemap</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
